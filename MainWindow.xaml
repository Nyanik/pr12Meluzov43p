<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <TextBlock HorizontalAlignment="Center" Name="TBHoSe" FontSize="32" >Реклама</TextBlock>
            <TextBlock HorizontalAlignment="Center" FontSize="18" Margin="10" >Много рекламы!</TextBlock>
            <Button Name="BtnReg"  Width="200" Height="50" FontWeight="Bold">Больше рекламы</Button>
        </StackPanel>
    </Grid>
</Window>
